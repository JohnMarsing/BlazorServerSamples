@page "/Parasha"
@using Page = BlazorServerSamples.Web.Links.Parasha
@using BlazorServerSamples.Web.SmartEnums

<PageTitle>@Page.Title</PageTitle>

<div class="pb-1 mt-4 mb-5">
	<h1><i class="@Page.Icon"></i> @Page.Title</h1>
</div>

<LoadingComponent IsLoading="CurrentParasha==null" TurnSpinnerOff="@TurnSpinnerOff">
	<div class="@MediaQuery.XsOrSm.DivClass">
		<CurrentParashaCard CurrentParasha="@CurrentParasha"
												CssUlClass="h5 mt-2"
												CssUlStyle="list-style-type:none"
												IsXsOrSm="true">
		</CurrentParashaCard>
	</div>

	<div class="@MediaQuery.MdOrLgOrXl.DivClass">
		<CurrentParashaCard CurrentParasha="@CurrentParasha"
												CssUlClass="fa-ul h5 mt-3"
												CssUlStyle=""
												IsXsOrSm="false">
		</CurrentParashaCard>
	</div>

</LoadingComponent>

@if (CurrentParasha is not null)
{
	<div class="d-md-none">
		<ParashotTableToggle IsXsOrSm="true" BookId="@CurrentParasha.BookId"></ParashotTableToggle>
	</div>

	<div class="d-none d-md-block">
		<ParashotTableToggle IsXsOrSm="false" BookId="@CurrentParasha.BookId"></ParashotTableToggle>
	</div>
}
