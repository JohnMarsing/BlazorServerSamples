@using BlazorServerSamples.Web.Enums

<div class="card mb-3 border-warning">
	<div class="card-header">
		<h4 class="card-title text-center">Seasons</h4>
	</div>
	<div class="card-body">
		<TableTemplate Items="Season.List.OrderBy(o => o.Value).ToList()">
			<TableHeader>
				<th>Id</th>
				<th>Name</th>
				<th>Type</th>
			</TableHeader>
			<RowTemplate>
				<td>@context.Value</td>
				<td class="h3"><span class="badge @context.BadgeColor"><i class="@context.Icon"></i> @context.Name</span></td>
				<td>@context.Type</td>
			</RowTemplate>
		</TableTemplate>
	</div>
	<p class="card-footer text-center">
		Count: @Season.List.Count
		<br /><span class="text-black-50"><small>Source: BaseSeasonSmartEnum</small></span>
	</p>

</div>
