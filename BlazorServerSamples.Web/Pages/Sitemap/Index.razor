@page "/Sitemap"
@using Page = BlazorServerSamples.Web.Links.Sitemap

<PageTitle>@Page.Title</PageTitle>

<div class="pb-2 mt-4 mb-2 border-bottom">
	<h2><i class="@Page.Icon"></i> @Page.Title</h2>
</div>


<div class="h4 mb-3">
	<ul class="fa-ul">
		<Iterations Items="SitemapLinks">
			<li>
				<span class="fa-li"><i class="@context.Icon"></i></span>
				<a href="@context.Index">@context.Title	</a>
			</li>
		</Iterations>
	</ul>
</div>

<BackHomeButton />
