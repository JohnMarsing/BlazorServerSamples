@page "/SingleEditForm"
@using BlazorServerSamples.Web.SmartEnums
@using Page = BlazorServerSamples.Web.Links.SingleEditForm
<PageTitle>@Page.Title</PageTitle>

<div class="pb-2 mt-4 mb-2 border-bottom">
	<h2><i class="@Page.Icon"></i> @Page.Title</h2>
</div>

<LoadingComponent IsLoading="WeeklyVideoAddVM==null || ShabbatWeekList==null">

	<div class="row">
		<div class="col-md-4">

			<a href="https://www.youtube.com/watch?v=@WeeklyVideoAddVM!.YouTubeId" target="_blank" title="@WeeklyVideoAddVM!.YouTubeId | @WeeklyVideoAddVM!.Title">
				<img src='https://img.youtube.com/vi/@WeeklyVideoAddVM!.YouTubeId/mqdefault.jpg'
						 class='m-1 img-fluid border border-3' />

				<br>@WeeklyVideoAddVM!.YouTubeId
			</a>

		</div>
		<div class="col-md-8">
			<EditForm Model="WeeklyVideoAddVM" OnValidSubmit="@HandleAddClick"
								class="card card-body bg-light my-2">
				<FluentValidationValidator @ref="_fluentValidationValidator" DisableAssemblyScanning="@true" />
				<ValidationSummary />

				<input type="hidden" id="youTubeId" name="YouTubeId" value="@WeeklyVideoAddVM.YouTubeId">

				<div class="form-group row">

					@if (ShabbatWeekList!.Any())
					{
						<label for="shabbatWeekId" class="col-md-3 col-form-label">Shabbat Week Id:</label>
						<div class="col-md-9">
							<InputSelect id="shabbatWeekId" @bind-Value="WeeklyVideoAddVM.ShabbatWeekId" class="form-control">
								@foreach (var shabbatWeek in ShabbatWeekList!)
								{
								<option value="@shabbatWeek.Id">@shabbatWeek.ShabbatDate.ToShortDateString() [@shabbatWeek.Id]</option>
								}
						</InputSelect>
						<ValidationMessage For="@(() => WeeklyVideoAddVM!.ShabbatWeekId)" />
					</div>
					}
					else
					{
						<p class="text-warning">ShabbatWeekList is empty</p>
					}
				</div>

				<div class="form-group row">
					<label for="title" class="col-md-3 col-form-label">Title:</label>
					<div class="col-md-9">
						<InputText id="title" class="form-control" @bind-Value="WeeklyVideoAddVM!.Title" />
						<ValidationMessage For="@(() => WeeklyVideoAddVM!.Title)" />
					</div>
				</div>

				<div class="form-group row">
					<label for="type" class="col-md-3 col-form-label">Type</label>
					<div class="col-md-9">
						<InputSelect id="type" @bind-Value="WeeklyVideoAddVM!.WeeklyVideoTypeId" class="form-control">
							@foreach (var shabbatWeek in WeeklyVideoType.List.ToList())
							{
								<option value="@shabbatWeek.Value">@shabbatWeek.Name</option>
							}
						</InputSelect>
						<ValidationMessage For="@(() => WeeklyVideoAddVM!.WeeklyVideoTypeId)" />
					</div>

				</div>

				<div class="row col-12 my-2">
					<div class="form-group">
						<button class="btn btn-success btn-md" type="submit">
							<i class="bi bi-file-plus"></i> Save
						</button>

					</div>
				</div>

			</EditForm>

		</div>
	</div>

</LoadingComponent>

<div class="row col-12 my-2">
	<div class="form-group">
		<button class="btn btn-warning btn-md" @onclick=@(() => ClickPartialValidate("Select")) title="Partial validation for Select only">
			<i class="bi bi-check"></i> Validate 1
		</button>
		<button class="btn btn-warning btn-md" @onclick=@(() => ClickPartialValidate("TitleOnly")) title="Partial validation for Title only">
			<i class="bi bi-check"></i> Validate 2
		</button>
	</div>
</div>

@if (DatabaseError)
{
	<p class="text-danger"><em>@DatabaseErrorMsg</em></p>
}
else
{
	if (DatabaseWarning)
	{
		<p class="text-warning">@DatabaseWarningMsg</p>
	}
	else
	{
		if (DatabaseInformation)
		{
			<p class="text-info">@DatabaseInformationMsg</p>
		}
	}
}

<BackHomeButton />