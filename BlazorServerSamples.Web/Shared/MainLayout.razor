@using BlazorServerSamples.Web.Settings
@using Microsoft.Extensions.Options

@inherits LayoutComponentBase
@inject IOptions<AppSettings> AppSettings

<PageTitle>Blazor Server Samples</PageTitle>

<div class="page">
	<div class="sidebar">
		<NavMenu />
	</div>

	<main>
		<div class="top-row px-4">
			<a href="@AppSettings.Value.Github" target="_blank"><i class="bi bi-github"></i></a>
		</div>

		<article class="content px-4">
			@Body
		</article>
		<footer class="text-muted mt-3 mb-1">
			<p class="text-center">
				<small><sup>@DateTime.Now.Year @AppSettings.Value.SiteTitle | @AppSettings.Value.Company &copy; all rights reserved.</sup></small>
			</p>
		</footer>
	</main>

</div>
